<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ButtonText" parent="AppTheme">
        <item name="background">@color/background</item>
        <item name="font">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ChatUserName" parent="AppTheme">
        <item name="font">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:textSize">@dimen/chat_user_name_size</item>
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="ChatMessage" parent="AppTheme">
        <item name="font">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:textSize">@dimen/chat_message_size</item>
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="roundedImageViewRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>
